<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <%= form_for @post do |post| %>
            <div class="form-group">
                <%= post.label :title, "Titulo" %>
                <%= post.text_field :title, class: "form-control" %>
            </div>

            <div class="form-group">
                <%= post.label :author, "Author" %>
                <%= post.text_field :author, class: "form-control" %>
            </div>
            
            <div class="form-group">
                <%= post.label :scheduled_to, "Publicar em" %>
                <%= post.text_field :scheduled_to %>
            </div>

            <div class="form-group">    
                <%= post.label :body, "Postagem" %>  
                <%= post.text_area :body, class: "form-control" %>
            </div>

            <%= post.submit "novo post", class: "btn btn-primary" %>
            <%= post.submit "visualizar", class: "btn btn-primary" %>
        <% end %>    
        <table class="table">
            <thead>
                <tr>
                    <th>Autor</th>
                    <th>Titulo</th>
                    <th>Data</th>
                </tr>
            </thread>
            <tbody>
                <% @allPosts.each do |post|%>
                <tr>
                    <td><%= post.author%></td>
                    <td><%= post.title%></td>
                    <td><%= post.created_at%> </td>
                    <td><%= link_to "Remover", post, class: "btn btn-danger", method: :delete %></td>
                </tr>
                <% end %>
            </tbody>
        </table>    
    </div>
</div>