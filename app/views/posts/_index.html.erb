

<% @laranjas.each do |post| %>
        <div class="thumbnail">
            <%= image_tag("posts/post-1.jpg") %>

            <div class="caption">
                <h1 class="text-center"><%= post.title %></h1>
                <h4 class="text-center">Por <%= post.author %> <%= post.created_at.strftime("em %d/%m/%Y") %></h4>
                <div class="text-justify post-content">
                    <%= markdown.render(post.body).html_safe %>
                </div>   
                <div class="row">
                    <div clas="col-md-offset-10 col-md-2">
                        <%= link_to "leia mais +", post %>
                    </div>
                </div>
            </div>

        </div>
<% end %>
