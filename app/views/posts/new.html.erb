<html>
    <body>
        <%= form_for Post.new do |post|%>
        <div class="form-group">
            <%= post.label :title, "Titulo" %>
            <%= post.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">    
            <%= post.label :body, "Postagem" %>  
            <%= post.text_area :body, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= post.label :author, "Author" %>
            <%= post.text_field :author, class: "form-control" %>
        </div>
       

         <%= post.submit "novo post", class: "btn btn-primary" %>
    <% end %>        
    </body>

</html>